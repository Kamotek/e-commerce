version: '3.8'

services:
  catalog-service:
    build: .
    ports:
      - "8081:8081"
    environment:
      - SPRING_DATASOURCE_URL=jdbc:postgresql://db:5432/e_commerce_catalog_db
    depends_on:
      - db

  db:
    image: postgres:15
    environment:
      POSTGRES_DB: e_commerce_catalog_db
      POSTGRES_PASSWORD: postgres
    ports:
      - "5432:5432"
    volumes:
      - postgres_catalog_data:/var/lib/postgresql/data

volumes:
  postgres_catalog_data: